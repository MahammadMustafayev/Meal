@model List<Menu>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manage/Views/Shared/_ManageLayout.cshtml";
    int order = 1;
}




<div class="container-fluid">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <h1>Authors:</h1>
        <a asp-action="Create" asp-controller="Menu" class="btn btn-primary">Create</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Id</th>
                
                <th scope="col">Title</th>
                <th scope="col">Sub Title</th>
                <th scope="col">Food Branch</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                order++;
                <tr>
                    <th scope="row">@order++</th>
                    <td>@item.Id</td>                   
                    <td>@item.Price</td>
                    <td>@item.Title</td>
                    <td>@item.Subtitle</td>
                    <td>@item.FoodBranch</td>
                    
                    <td><img src="~/image/bg-images/@item.Image" style="max-width:100px" /></td>
                    <td>
                        <a asp-action="Edit" asp-controller="Menu" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-controller="Menu" asp-route-id="@item.Id" class="btn btn-danger btn-sweet-delete">Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>

